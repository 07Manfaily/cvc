  const columns = column.map((col) => {
        return {
            name: col.to_display,
            selector: (row) => row[col["key"]],
            omit:checkedItems 
        }
    }
    const [checkedItems, setCheckedItems] = useState({}); // État local pour suivre les éléments cochés

    // Fonction pour gérer le changement de l'état des cases à cocher
    const handleCheckboxChange = (key) => {
        setCheckedItems({ ...checkedItems, [key]: !checkedItems[key] });
    };
function returnColumn() {

        return (

           {columns.map((col) => (
                        <ListItem key={col.key} component="div" disablePadding>
                            <Checkbox
                                checked={checkedItems[col.key] || false}
                                onChange={() => handleCheckboxChange(col.key)}
                            />
                            <ListItemText primary={col.to_display} />
                        </ListItem>
                    ))}
<Accordion>
                        <AccordionSummary

                            aria-controls="panel3-content"
                            id="panel3-header"
                        >
                            <FilterListIcon />
                        </AccordionSummary>
                        <AccordionDetails>
                            <FixedSizeList
                                height={400}
                                width={360}
                                itemSize={46}
                                itemCount={column.length}
                                overscanCount={5}
                            >
                                {returnColumn}
                            </FixedSizeList>
                        </AccordionDetails>

                    </Accordion>
