import React, { useState } from "react";
import EastIcon from '@mui/icons-material/East';
import PersonSearchIcon from '@mui/icons-material/PersonSearch';
import IconClient from '../assets/client.png';
import { Grid, IconButton, Button, InputAdornment, TextField, Card, Typography, useMediaQuery, useTheme } from '@mui/material';

export default function SearchId() {

    const [identifiant, setIdentifiant] = useState('');

    const handleChangeId = (e) => {
        setIdentifiant(e.target.value);
    };

    return (
        <Grid 
            xs={12} lg={12} md={12} 
            style={{ backgroundColor: "black", filter: "brightness(30%)", height: '100vh', width: '100%' }}
            container
            direction="column"
            justifyContent="center"
            alignItems="center"
        >
            <Card sx={{ maxWidth: 480, padding: '24px', borderRadius: 4, boxShadow: '0px 4px 20px rgba(0, 0, 0, 0.5)' }}>
                <center>
                    <img
                        style={{ width: 100, marginBottom: 5 }}
                        src={IconClient}
                        alt="Client Icon"
                    />
                </center>
                <h2 style={{ fontFamily: 'system-ui' }}>
                    Veuillez saisir l'identifiant du client 
                </h2>
                <Grid 
                    container 
                    sx={{ marginTop: 6 }}
                    direction="column"
                    justifyContent="space-between"
                    alignItems="center"
                >
                    <TextField
                        value={identifiant}
                        onChange={handleChangeId}
                        placeholder="Identifiant du client"
                        id="fullWidth"
                    />
                    <Grid sx={{ marginTop: 5 }}>
                        <Button 
                            style={{
                                fontFamily: 'system-ui',
                                fontSize: 16,
                                color: "white",
                                backgroundColor: '#346C39',
                                marginBottom: 20,
                                width: 300
                            }} 
                            size="medium"
                        >
                            Rechercher
                        </Button>
                    </Grid>
                </Grid>
            </Card>
        </Grid>
    );
}
