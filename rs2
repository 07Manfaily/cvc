import React, { useState } from "react";
import RemoveRedEyeIcon from '@mui/icons-material/RemoveRedEye';
import VisibilityOffIcon from '@mui/icons-material/VisibilityOff';
import { Grid, IconButton, InputAdornment, TextField, Typography, useMediaQuery, useTheme } from '@mui/material';

export default function Login2() {
  const [showPassword, setShowPassword] = useState(false);
  const [username, setUsername] = useState('');
  const [password, setPassword] = useState('');

  const theme = useTheme();
  const isMediumOrBelow = useMediaQuery(theme.breakpoints.down('md'));

  return (
    <Grid container spacing={2} style={{ height: '100vh' }}>
      <Grid
        item
        xs={12}
        md={7}
        container
        direction="column"
        justifyContent="center"
        alignItems="center"
        style={{ 
          backgroundColor: "#0D503C", 
          height: "100%", 
          display: isMediumOrBelow ? 'none' : 'flex' 
        }}
      >
        <img
          style={{ width: 165, marginBottom: 5 }}
          src="https://e-decideurs.fr/wp-content/uploads/2019/11/Soci%C3%A9t%C3%A9-G%C3%A9n%C3%A9rale.png"
          alt="logo"
        />
        <Typography>
          <b style={{ fontFamily: "Montserrat", fontWeight: 500, fontSize: isMediumOrBelow ? 48 : 94, color: "white" }}>Credapp Simplifi√©e</b>
        </Typography>
      </Grid>

      <Grid
        item
        xs={12}
        md={5}
        container
        direction="column"
        justifyContent="center"
        alignItems="center"
        style={{ padding: isMediumOrBelow ? '0 20px' : '0' }}
      >
        <h1>Connexion</h1>
        <TextField
          id="username"
          variant="outlined"
          size="small"
          name="username"
          label="Username"
          value={username}
          onChange={(e) => setUsername(e.target.value)}
          fullWidth
          style={{ width: isMediumOrBelow ? '100%' : '70%', marginBottom: 20 }}
        />
        <TextField
          id="password"
          variant="outlined"
          size="small"
          name="password"
          label="Password"
          value={password}
          onChange={(e) => setPassword(e.target.value)}
          type={showPassword ? 'text' : 'password'}
          InputProps={{
            endAdornment: (
              <InputAdornment position="end">
                <IconButton onClick={() => setShowPassword(!showPassword)} edge="end">
                  {showPassword ? <RemoveRedEyeIcon /> : <VisibilityOffIcon />}
                </IconButton>
              </InputAdornment>
            ),
          }}
          fullWidth
          style={{ width: isMediumOrBelow ? '100%' : '70%' }}
        />
      </Grid>
    </Grid>
  );
}
